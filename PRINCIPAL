package programacao1;
import Parte2.Metodos_trabalho;
import java.util.Scanner;

public class Principal_trabalho {
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int[][] matriz = new int[3][3];
      int[] vetor = new int[3]; int opção;
      int op;
        for(int i = 0; i<matriz.length; i++ ){
            for(int j = 0; j<matriz[i].length; j++){
                System.out.println("Informe o número da linha "+(1+i)+" e coluna "+(j+1));
                matriz[i][j] = sc.nextInt();
            }
        }
        do{
            System.out.println("1 - Calcular e imprimir a soma linha da matriz");
            System.out.println("2 - Identificar e imprimir os numeros primos");
            System.out.println("3 - Calcular a matriz transposta");
            System.out.println("4 - Calcular o fatorial da matriz");
            System.out.println("5 - Calcular o fatorial da soma linha da matriz");
            System.out.println("6 - Calcular o fatorial do soma coluna da  matriz");
            System.out.println("7 - Calcular o determinante da matriz");
            System.out.println("8 - Calcular a média da diagonal principal da matriz");
            System.out.println("9 - Calcular  da matriz");
            System.out.println("10 - Calcular  da matriz");
        
            System.out.println("0 - Sair do programa");
            op = sc.nextInt();

            switch (op) {
                case 1 -> {
                    Metodos_trabalho.Soma_Linhas(matriz, vetor);
                }
                case 2 -> {
                    Metodos_trabalho.Contar_Primos(matriz);
                }
                case 3  -> {
                    Metodos_trabalho.Matriz_Transposta(matriz, op);
                  }
                case 4 -> {
                    Metodos_trabalho.calcularFatorial(op);                   
                }
                case 5 -> {
                    Metodos_trabalho.somaLinhafatorial(matriz, vetor, op);                 
                }
                case 6 ->{
                    Metodos_trabalho.somaDasColunasFatorial(matriz);
                }
                case 7 -> {
                    Metodos_trabalho.calculoDeterminante(matriz);
                }
                case 0 -> System.out.println("Programa encerrrado!");
                
            }

        } while(op!=5);
        }
    public static void Somando_linhas(int[][] matriz,int[] vetor){
        Metodos_trabalho.Soma_Linhas(matriz, vetor); 
        for(int i = 0; i < 3; ++i) {
            System.out.println("O valor da soma da linha " + (i+1) + " = " + vetor[i]);
        }
    }
    public static void Contar_Primos(int[][] matriz, int [] vetor){
        int num_primo = Metodos_trabalho.Contar_Primos(matriz);
        for(int i = 0; i < 3; ++i) {
        for(int j = 0; j<matriz[i].length; j++){
            System.out.println("A quantidade de primos é " + (i+1) + " = " + vetor[i]);
        System.out.println(num_primo);
    }     
  }
    }
    public static void Transposta_Matriz (int[][] matriz) {
       double metodo = Metodos_trabalho.Matriz_Transposta(matriz, 0);
       System.out.print(" A matriz transposta é igual a " + metodo);     
   }
    public static void Fatorial_matriz (int i){
        Metodos_trabalho.calcularFatorial(i);
        System.out.print(" O fatorial da matriz é igual a " + i);
    
    }   
    public static void SomaLinha_Fatorial (int m[][], int vetor[], int i){
        Metodos_trabalho.somaLinhafatorial(m, vetor, i);
        System.out.print(" O fatorial da soma linha da matriz é igual a " + i);
    }
    public static void SomaColuna_Fatorial (int matriz [][]){
        double somacoluna = Metodos_trabalho.somaDasColunasFatorial(matriz);
        System.out.println("O valor da soma fatorial dos elementos da coluna " + somacoluna);
            }
    public static void Calcula_Determinante (int[][] matriz){
        double det = Metodos_trabalho.calculoDeterminante(matriz);
        System.out.println("O valor do determinante da matriz " + det);
        
}
    public static void Media_DiagonalPrincipal (int[][] matriz) {
        float media_diagonalprincipal = Metodos_trabalho.mediaDiagonalPrincipal(matriz);
         System.out.println("O valor da media da diagonal principal da matriz " + media_diagonalprincipal);
    }

}
